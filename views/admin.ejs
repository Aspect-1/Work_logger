<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/style/admin.css" />
</head>
<body>
  <div class="admin-wrapper">
    <h2>Admin - User Playlist Progress</h2>

    <% groupedData.forEach(user => { %>
      <h3>ðŸ‘¤ <%= user.username %> (<%= user.userId %>)</h3>
      <% if (user.playlists.length === 0) { %>
        <p>No playlist data available.</p>
      <% } else { %>
        <table>
          <thead>
            <tr>
              <th>Playlist Title</th>
              <th>Completed Videos</th>
              <th>Total Videos</th>
              <th>Skipped Videos</th>
              <th>Skipped Time (s)</th>
            </tr>
          </thead>
          <tbody>
            <% user.playlists.forEach(p => { %>
              <tr>
                <td><%= p.playlistTitle %></td>
                <td><%= p.completedCount %></td>
                <td><%= p.totalVideos %></td>
                <td><%= p.skippedVideos %></td>
                <td><%= p.skippedSeconds %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    <% }) %>
  </div>
</body>
</html>
